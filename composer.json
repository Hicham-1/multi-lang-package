{
    "name": "h1ch4m/multi-lang",
    "description": "A multi language solution for Laravel applications with database-driven translations, automatic language detection.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "illuminate/support": ">=8.0",
        "spatie/laravel-translatable": ">=6.6"
    },
    "autoload": {
        "psr-4": {
            "H1ch4m\\MultiLang\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "H1ch4m\\MultiLang\\MultiLangServiceProvider"
            ]
        }
    }
}